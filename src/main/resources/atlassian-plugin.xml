<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="atlassian-data-center-compatible">true</param>
    </plugin-info>

    <resource type="i18n" name="i18n" location="/ru/mail/jira/plugins/myteam/myteam" />

    <rest key="rest" path="/myteam" version="1.0"/>

    <!-- Configuration -->

    <component-import key="plugin-settings-factory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />
    <component key="plugin-data" class="ru.mail.jira.plugins.myteam.configuration.PluginDataImpl" public="true">
        <interface>ru.mail.jira.plugins.myteam.configuration.PluginData</interface>
    </component>

    <component-import key="user-property-manager" interface="com.atlassian.jira.user.UserPropertyManager"/>
    <component-import key="user-search-service" interface="com.atlassian.jira.bc.user.search.UserSearchService"/>
    <component key="user-data" class="ru.mail.jira.plugins.myteam.configuration.UserData" />

    <web-item key="myteam-configuration-link" section="admin_plugins_menu/top_plugins_section">
        <label key="ru.mail.jira.plugins.myteam.title" />
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition">
            <param name="permission">admin</param>
        </condition>
        <link>/secure/MyteamConfiguration!default.jspa</link>
    </web-item>

    <web-resource key="configuration-page-resource" name="Addon configuration page resources">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:aui-select2</dependency>
        <resource type="download" name="myteam-configuration-page.js" location="ru/mail/jira/plugins/myteam/configuration/myteam-configuration-page.js" />
    </web-resource>

    <webwork1 key="myteam-configuration-action" class="java.lang.Object" roles-required="admin">
        <actions>
            <action name="ru.mail.jira.plugins.myteam.configuration.MyteamConfigurationAction" alias="MyteamConfiguration">
                <view name="input">/ru/mail/jira/plugins/myteam/configuration/configuration-page.vm</view>
            </action>
        </actions>
    </webwork1>

    <web-resource key="myteam-profile-panel-resource">
        <transformation extension="js">
            <transformer key="jsI18n" />
        </transformation>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="contragent-table-page.css" location="ru/mail/jira/plugins/myteam/configuration/myteam-profile-panel.css" />
        <resource type="download" name="contragent-table-page.js" location="ru/mail/jira/plugins/myteam/configuration/myteam-profile-panel.js" />
        <context>atl.userprofile</context>
    </web-resource>


    <web-panel key="myteam-profile-panel" location="webpanels.user.profile.summary.custom" weight="10">
        <condition class="ru.mail.jira.plugins.myteam.configuration.MyteamProfilePanelCondition" />
        <context-provider class="ru.mail.jira.plugins.myteam.configuration.MyteamProfilePanel" />
        <resource type="velocity" name="view" location="ru/mail/jira/plugins/myteam/configuration/myteam-profile-panel.vm" />
    </web-panel>

    <!-- Protocol -->
    <component key="myteam-service-module" class="ru.mail.jira.plugins.myteam.protocol.MyteamServiceImpl" public="true">
        <interface>ru.mail.jira.plugins.myteam.protocol.MyteamService</interface>
    </component>

    <component-import key="event-publisher" interface="com.atlassian.event.api.EventPublisher" />
    <component key="myteam-event-listener" class="ru.mail.jira.plugins.myteam.protocol.MyteamEventListener" />
    <component key="myteam-bot-message-formatter" class="ru.mail.jira.plugins.myteam.protocol.MessageFormatter" />

    <component key="myteam-bot-service" class="ru.mail.jira.plugins.myteam.protocol.MyteamBot" />

    <component key="myteam-events-listener" class="ru.mail.jira.plugins.myteam.protocol.listeners.MyteamEventsListener"/>
    <component key="button-click-listener" class="ru.mail.jira.plugins.myteam.protocol.listeners.ButtonClickListener"/>
    <component key="chat-commands-listener" class="ru.mail.jira.plugins.myteam.protocol.listeners.ChatCommandListener"/>
    <component key="create-issue-events-listener" class="ru.mail.jira.plugins.myteam.protocol.listeners.CreateIssueEventsListener"/>
    <component key="chat-state-mapping" class="ru.mail.jira.plugins.myteam.protocol.ChatStateMapping"/>

    <component key="thirdparty-service-initializer" class="ru.mail.jira.plugins.myteam.configuration.ThirdPartyServiceInitializer" public="true">
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>

    <component key="bot-orchestration-service" class="ru.mail.jira.plugins.myteam.protocol.BotsOrchestrationService">
            <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>

    <component-import key="cluster-manager" interface="com.atlassian.jira.cluster.ClusterManager"/>
    <component-import key="scheduler-service" interface="com.atlassian.scheduler.SchedulerService"/>
    <component-import key="time-zone-manager" interface="com.atlassian.jira.timezone.TimeZoneManager"/>
    <component-import key="cluster-lock-service" interface="com.atlassian.beehive.ClusterLockService"/>
    <component-import key="cluster-messaging-service" interface="com.atlassian.jira.cluster.ClusterMessagingService"/>
    <component-import key="i18nResolver" interface="com.atlassian.sal.api.message.I18nResolver"/>
    <component-import key="search-service" interface="com.atlassian.jira.bc.issue.search.SearchService"/>

    <component key="bot-fault-tolerance-provider" class="ru.mail.jira.plugins.myteam.protocol.BotFaultToleranceProvider" public="true">
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>



    <!-- Myteam -->
    <component key="myteam-api-client-impl" class="ru.mail.jira.plugins.myteam.myteam.MyteamApiClientImpl" public="true">
        <interface>ru.mail.jira.plugins.myteam.myteam.MyteamApiClient</interface>
    </component>
    <component key="myteam-events-fetcher" class="ru.mail.jira.plugins.myteam.myteam.MyteamEventsFetcher"/>

</atlassian-plugin>
